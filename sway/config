### Main Configuration

# Load Variables
include ~/.config/sway/variables

# Load Input Configuration
include ~/.config/sway/input

# Load Output Configuration
include ~/.config/sway/output

# Load Keybindings
include ~/.config/sway/keybindings

# Load Layout Configuration
include ~/.config/sway/layout

# Load Resize Mode Configuration
include ~/.config/sway/resize

# Load Status Bar Configuration
include ~/.config/sway/statusbar

# Include Additional Configuration
include /etc/sway/config.d/*
